---
import { IoWaterOutline } from "react-icons/io5";
import { FaTemperatureFull } from "react-icons/fa6";
import { IoEyedropOutline } from "react-icons/io5";
import { PiFish } from "react-icons/pi";

import WaterQualityValue from "./data/water_quality.tsx";
import ElectricalConductivityValue from "./data/electrical_conductivity";
import TotalDissolvedParticlesValue from "./data/total_dissolved_particles.tsx";
import WaterTemperatureValue from "./data/water_temperature.tsx";
import WaterSubTemperatureValue from "./data/water_sub_temperature.tsx";
import PHValue from "./data/ph_value.tsx";
---

<div class="w-full max-h-full h-fit mt-4 grid grid-rows-[1fr_1fr_1fr_auto] gap-4 overflow-x-hidden overflow-y-visible">
  <!-- Water Quality -->
  <div class="w-full h-fit flex flex-row gap-2">
    <div class="relative w-full h-64 bg-[#eee] duration-250 shadow-lg hover:shadow-2xl hover:translate-x-0.5 hover:translate-y-0.5 flex justify-center items-center rounded-2xl">
      <div class="flex flex-row absolute top-4 left-1/2 -translate-x-1/2 w-max">
        <div class="flex flex-col justify-center items-center">
          <IoWaterOutline className="text-xl" />
        </div>
        <h1 class="text-xl font-bold text-black">Water Quality</h1>
      </div>
      <WaterQualityValue client:load />
      <div class="absolute bottom-2 left-1/2 -translate-x-1/2 text-md w-full text-black flex flex-row justify-around">
        <p class="min-w-28">EC: <ElectricalConductivityValue client:load /> Siemens</p>
        <p class="min-w-28">TDS: <TotalDissolvedParticlesValue client:load /> PPM</p>
      </div>
    </div>
  </div>
  <!-- Temperature and pH Meter -->
  <div class="w-full h-fit flex flex-col md:flex-row gap-2">
    <div class="relative w-full h-64 bg-[#eee] duration-250 shadow-lg hover:shadow-2xl hover:translate-x-0.5 hover:translate-y-0.5 flex justify-center items-center rounded-2xl">
      <div class="flex flex-row absolute top-4 left-1/2 -translate-x-1/2 w-max">
        <div class="flex flex-col justify-center items-center">
          <FaTemperatureFull className="text-xl" />
        </div>
        <h1 class="text-lg font-bold text-black">Temperature</h1>
      </div>
      <h1 class="text-3xl font-bold text-black"><WaterTemperatureValue client:load /><span class="text-gray-400 text-xl">Â°C</span></h1>
      <div class="absolute bottom-2 left-1/2 -translate-x-1/2 text-md w-full text-black flex flex-row justify-around">
        <WaterSubTemperatureValue client:load />
      </div>
    </div>
    <div class="relative w-full h-64 bg-[#eee] duration-250 shadow-lg hover:shadow-2xl hover:translate-x-0.5 hover:translate-y-0.5 flex justify-center items-center rounded-2xl">
      <div class="flex flex-row absolute top-4 left-1/2 -translate-x-1/2 w-max">
        <div class="flex flex-col justify-center items-center">
          <IoEyedropOutline className="text-xl" />
        </div>
        <h1 class="text-lg font-bold text-black">pH Value</h1>
      </div>
      <h1 class="text-3xl font-bold text-black">
        <PHValue client:load />
      </h1>
    </div>
  </div>
  <!-- Fish Feeding -->
  <div class="w-full h-64 bg-[#eee] cursor-pointer duration-250 shadow-lg hover:shadow-2xl hover:translate-x-0.5 active:-translate-x-0.5 hover:translate-y-0.5 active:-translate-y-0.5 flex flex-row gap-4 rounded-2xl">
    <div class="w-full h-full flex flex-col justify-center items-center p-4">
      <h1 class="text-2xl font-bold text-black">Fish Feed</h1>
      <h1 class="text-base font-thin text-black">click to feed.</h1>
    </div>
    <div class="w-full h-full p-4 flex justify-center items-center">
      <PiFish className="text-6xl" />
    </div>
  </div>
  <div class="w-full">
    <button class="w-fit h-full px-8 py-4 cursor-pointer bg-red-500 text-white rounded-xl duration-250 shadow-lg hover:shadow-2xl hover:translate-x-0.5 active:-translate-x-0.5 hover:translate-y-0.5 active:-translate-y-0.5" onclick="window.location.href = '/gate/logout';">Logout</button>
  </div>
</div>